<!doctype html>
<html>
    <head>
        <style type="text/css">
            * {
                margin: 0px;
                padding: 0px;
            }
            body {
                background-color: #D1E7ED;
                font-family: Arial;
                font-size: 12px;
                overflow-x: hidden;
                overflow-y: scroll;
                color: #555;
            }
            img {
                width: 50px;
                margin: 5px;
                float: left;
            }
            .title {
                float: left;
                margin-top: 10px;
                font-size: 25px;
                letter-spacing: -2px;
            }
            .online {
                width: 100%;
                text-align: center;
                font-style: italic;
                margin: 20px 0 10px 0;
                font-size: 13px;
            }
            ul {
                padding-top: 60px;
                width: 100%;
                list-style: none;
            }
            ul li {
                width: 100%;
                text-align: center;
                font-size: 20px;
                padding: 10px 0;
                border-bottom: 1px solid rgba(0,0,0,0.2);
                background-color: rgba(0,0,0,0.1);
            }
            ul li:nth-child(even) {
                background-color: rgba(255,255,255,0.3);
            }
            ul li:first-child {
                border-top: 5px solid #456179;
            }
            ul li a {
                text-decoration: none;
                color: #09F;
            }
            ul li a:hover {
                text-decoration: underline;
            }
        </style>
    </head>
    <body>
        <img src="https://cloudspokes.s3.amazonaws.com/CloudSpokes.png" />
        <span class="title"><b>Cloud</b>Spokes</span>
        <ul>
            <% for (var name in users.list) { %>
                <li><a target="_blank" href="http://www.cloudspokes.com/members/<%= name %>"><%= name %></a></li>
            <% } %>
        </ul>
        <p class="online"><%= users.size %> members online</p>
    </body>
</html>
